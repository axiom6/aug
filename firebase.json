{
  "hosting": {
    "public": "pub",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      { "source": "**", "destination": "/augm.html" } ],
    "redirects":[
      { "source": "**", "destination": "/404.html",  "type":404 },
      { "source": "**", "destination": "/Page.html", "type":301 } ]
  },
  "database": {
    "rules":   "pub/bas/rules/database.rules.json" },
  "firestore": {
    "rules":   "pub/bas/rules/firestore.rules",
    "indexes": "pub/bas/rules/firestore.indexes.json" },
  "storage": {
    "rules":   "pub/bas/rules/storage.rules" }
}
